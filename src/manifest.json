{
    "name": "TiddlyChrome",
    "version": "0.4",
    "manifest_version": 2,
    "minimum_chrome_version": "26",
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "permissions": [
        {"fileSystem": ["write", "directory"]},
        "webview"
    ],
    "file_handlers" : {
        "html" : {
            "extensions" : [ "html", "htm" ],
            "title" : "TiddlyChrome"
        }
    },
    "webview": {
        "partitions": [
            {
              "name": "browserTW",
              "accessible_resources": ["tiddlyChromeFoxer.js", "index"]
            }
        ]
    }
}
